<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Neighborhood</th>
        <th>Total stars</th>
        <th>Number of reviews</th>
        <th>Price</th>
        <th>Lat</th>
        <th>Lng</th>
        <th>Description</th>
        <th>Cover image</th>
        <th>Actions</th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.street %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.zip %></td>
        <td><%= restaurant.neighborhood %></td>
        <td><%= restaurant.total_stars %></td>
        <td><%= restaurant.number_of_reviews %></td>
        <td><%= restaurant.price %></td>
        <td><%= restaurant.lat %></td>
        <td><%= restaurant.lng %></td>
        <td><%= restaurant.description %></td>
        <td><img src='<%= restaurant.cover_image %>' class='img-responsive'></td>
        <td>
          <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary">Show</a>
          <a href="/restaurants/<%= restaurant.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_restaurant/<%= restaurant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @restaurants, theme: 'twitter-bootstrap-4' %>
  </div>
